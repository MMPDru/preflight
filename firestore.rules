rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/user-permissions/$(request.auth.uid)).data.roleId;
    }
    
    function hasRole(role) {
      return isAuthenticated() && getUserRole() == role;
    }
    
    function isAdmin() {
      return hasRole('admin') || hasRole('super-admin');
    }
    
    function isSuperAdmin() {
      return hasRole('super-admin');
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Jobs collection
    match /jobs/{jobId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
      allow delete: if isAdmin();
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // Customers collection
    match /customers/{customerId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Permissions collection (read-only for users, write for super-admin)
    match /permissions/{permId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin();
    }
    
    // Roles collection
    match /roles/{roleId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin();
    }
    
    // User permissions
    match /user-permissions/{userId} {
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      allow write: if isAdmin();
    }
    
    // Approval chains
    match /approval-chains/{chainId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Queue jobs
    match /queue-jobs/{jobId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Job progress
    match /job-progress/{progressId} {
      allow read: if isAuthenticated();
      allow write: if false; // Server-only
    }
    
    // Notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow write: if false; // Server-only
    }
    
    // Notification preferences
    match /notification-preferences/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // Routing rules
    match /routing-rules/{ruleId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Job fingerprints
    match /job-fingerprints/{fingerprintId} {
      allow read: if isAuthenticated();
      allow write: if false; // Server-only
    }
    
    // Workflow events
    match /workflow-events/{eventId} {
      allow read: if isAuthenticated();
      allow write: if false; // Server-only
    }
    
    // Email templates
    match /email-templates/{templateId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Audit logs (read-only for admins, write for server)
    match /audit-logs/{logId} {
      allow read: if isAdmin();
      allow write: if false; // Server-only
    }
    
    // Compliance reports
    match /compliance-reports/{reportId} {
      allow read: if isAdmin();
      allow write: if false; // Server-only
    }
    
    // System config
    match /system-config/{configId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin();
    }
    
    // Feature toggles
    match /feature-toggles/{toggleId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin();
    }
    
    // API configs
    match /api-configs/{apiKeyId} {
      allow read: if isSuperAdmin();
      allow write: if isSuperAdmin();
    }
    
    // Pricing rules
    match /pricing-rules/{ruleId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Quotes
    match /quotes/{quoteId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (resource.data.customerId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }
    
    // Backups
    match /backups/{backupId} {
      allow read: if isAdmin();
      allow write: if false; // Server-only
    }
    
    // Restore operations
    match /restore-operations/{restoreId} {
      allow read: if isAdmin();
      allow write: if false; // Server-only
    }
    
    // Data exports
    match /data-exports/{exportId} {
      allow read: if isAdmin();
      allow write: if false; // Server-only
    }
    
    // Data imports
    match /data-imports/{importId} {
      allow read: if isAdmin();
      allow write: if false; // Server-only
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
