        {
            "id": "pdf-fixer",
            "title": "Using the PDF Fixer API",
            "duration": "3:45",
            "steps": [
                {
                    "timestamp": 0,
                    "action": "navigate",
                    "target": "/dashboard",
                    "description": "Open Dashboard"
                },
                {
                    "timestamp": 5,
                    "action": "click",
                    "target": "#upload-button",
                    "description": "Open Upload dialog"
                },
                {
                    "timestamp": 10,
                    "action": "type",
                    "target": "#file-input",
                    "value": "sample.pdf",
                    "description": "Select PDF"
                },
                {
                    "timestamp": 15,
