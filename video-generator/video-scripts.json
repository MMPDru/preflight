                {
                    "timestamp": 25,
                    "action": "select",
                    "target": "#fix-types",
                    "value": "['embed-fonts','resample-images']",
                    "description": "Choose fix types"
                },
                {
                    "timestamp": 30,
                    "action": "click",
                    "target": "#apply-fix",
                    "description": "Apply fixes"
                },
                {
                    "timestamp": 35,
                    "action": "wait",
                    "duration": 3000,
                    "description": "Wait for processing"
