{
    "scripts": [
        {
            "id": "login",
            "title": "How to Log In",
            "duration": "3:00",
            "steps": [
                {
                    "timestamp": 0,
                    "action": "navigate",
                    "target": "/login",
                    "description": "Open the login page"
                },
                {
                    "timestamp": 5,
                    "action": "type",
                    "target": "#email",
                    "value": "demo@example.com",
                    "description": "Enter email"
                },
                {
                    "timestamp": 10,
                    "action": "type",
                    "target": "#password",
                    "value": "demoPass123",
                    "description": "Enter password"
                },
                {
                    "timestamp": 15,
                    "action": "click",
                    "target": "#sign-in-button",
                    "description": "Click Sign In"
                },
                {
                    "timestamp": 20,
                    "action": "wait",
                    "duration": 2000,
                    "description": "Wait for redirect"
                }
            ],
            "voiceover": [
                "Welcome to PreFlight Pro. In this short video we’ll show you how to log in.",
                "First, open the login page.",
                "Enter your email address in the email field.",
                "Enter your password in the password field.",
                "Click the Sign In button.",
                "If the credentials are correct you’ll be taken to the Dashboard."
            ]
        },
        {
            "id": "dashboard",
            "title": "Navigating the Dashboard",
            "duration": "4:30",
            "steps": [
                {
                    "timestamp": 0,
                    "action": "navigate",
                    "target": "/dashboard",
                    "description": "Open the Dashboard"
                },
                {
                    "timestamp": 5,
                    "action": "hover",
                    "target": ".job-card:first-child",
                    "description": "Hover a job card to see preview"
