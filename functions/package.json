{
    "name": "preflight-pro-backend",
    "version": "1.0.0",
    "description": "Backend services for PreFlight Pro - Intelligent Support Ecosystem",
    "main": "lib/index.js",
    "scripts": {
        "build": "tsc",
        "serve": "npm run build && node lib/index.js",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log",
        "test": "jest",
        "lint": "eslint src/**/*.ts",
        "format": "prettier --write src/**/*.ts"
    },
    "engines": {
        "node": "18"
    },
    "dependencies": {
        "@socket.io/redis-adapter": "^8.2.1",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "firebase-admin": "^12.0.0",
        "firebase-functions": "^4.5.0",
        "helmet": "^7.1.0",
        "ioredis": "^5.3.2",
        "openai": "^4.24.1",
        "redis": "^4.6.11",
        "simple-git": "^3.22.0",
        "socket.io": "^4.6.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.6",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "prettier": "^3.1.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    },
    "private": true
}